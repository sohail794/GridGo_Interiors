# Netlify Headers Configuration
# Add security headers to improve security posture

/*
  # Prevent clickjacking attacks
  X-Frame-Options: DENY
  
  # Enable XSS protection in older browsers
  X-XSS-Protection: 1; mode=block
  
  # Prevent MIME type sniffing
  X-Content-Type-Options: nosniff
  
  # Referrer policy
  Referrer-Policy: strict-origin-when-cross-origin
  
  # Permissions policy (formerly Feature Policy)
  Permissions-Policy: geolocation=(), microphone=(), camera=(), payment=()
  
  # Content Security Policy
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://www.googletagmanager.com https://www.google-analytics.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' https://*.supabase.co; frame-ancestors 'none'; base-uri 'self'; form-action 'self'
  
  # Strict Transport Security (HSTS)
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload
  
  # Cache control for static assets
  Cache-Control: public, max-age=31536000, immutable

# Separate rules for HTML files
/*.html
  Cache-Control: public, max-age=0, must-revalidate

# API routes (if any)
/api/*
  Cache-Control: no-store, no-cache, must-revalidate
  X-Robots-Tag: noindex
